generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==========================================
// AUTHENTICATION
// ==========================================

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String?
  passwordHash String
  role         UserRole  @default(ADMIN)
  avatar       String?
  lastLogin    DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  sessions     Session[]
  auditLogs    AuditLog[]

  @@index([email])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  EDITOR
}

// ==========================================
// AUDIT LOGGING
// ==========================================

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String   // CREATE, UPDATE, DELETE, PUBLISH, UNPUBLISH
  entity    String   // Project, BlogPost, Skill, etc.
  entityId  String
  changes   Json?    // Before/after diff
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([entity, entityId])
  @@index([createdAt])
}

// ==========================================
// SITE SETTINGS
// ==========================================

model SiteSettings {
  id              String   @id @default(cuid())
  siteName        String
  siteTitle       String
  siteDescription String   @db.Text
  siteUrl         String
  ogImage         String?
  favicon         String?
  keywords        String   // JSON array stored as string
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model AuthorProfile {
  id           String   @id @default(cuid())
  name         String
  role         String   // "Full-Stack Developer"
  bio          String   @db.Text
  shortBio     String   // For hero section
  location     String
  email        String
  avatar       String?
  resumeUrl    String?
  availability String   // "Open for opportunities"
  heroRoles    String   // JSON array: ["Full-Stack Developer", "React Specialist", ...]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model SocialLink {
  id        String   @id @default(cuid())
  platform  String   // github, linkedin, twitter, email, etc.
  url       String
  label     String
  icon      String   // Icon identifier
  order     Int      @default(0)
  visible   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([order])
}

// ==========================================
// ABOUT SECTION
// ==========================================

model AboutStats {
  id        String   @id @default(cuid())
  label     String   // "Years Experience"
  value     Int      // 5
  suffix    String?  // "+" suffix
  order     Int      @default(0)
  visible   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([order])
}

// ==========================================
// SKILLS
// ==========================================

model SkillCategory {
  id        String   @id @default(cuid())
  name      String   // "Frontend", "Backend", "Tools & DevOps"
  icon      String?  // Icon identifier
  order     Int      @default(0)
  visible   Boolean  @default(true)
  skills    Skill[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([order])
}

model Skill {
  id          String        @id @default(cuid())
  name        String        // "React"
  proficiency Int           // 0-100
  icon        String?       // Icon identifier
  categoryId  String
  category    SkillCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  order       Int           @default(0)
  visible     Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([categoryId])
  @@index([order])
}

model TechStackItem {
  id        String   @id @default(cuid())
  name      String   // "React"
  icon      String   // Icon identifier or URL
  url       String?  // Link to tech's website
  order     Int      @default(0)
  visible   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([order])
}

// ==========================================
// MEDIA MANAGEMENT
// ==========================================

model Media {
  id           String   @id @default(cuid())
  filename     String
  originalName String
  mimeType     String
  size         Int      // bytes
  url          String
  thumbnailUrl String?
  alt          String?
  folder       String   @default("general") // projects, blog, profile, general
  width        Int?
  height       Int?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([folder])
  @@index([createdAt])
}

// ==========================================
// NAVIGATION
// ==========================================

model NavigationItem {
  id        String   @id @default(cuid())
  label     String
  href      String
  type      String   @default("main") // main, footer
  order     Int      @default(0)
  visible   Boolean  @default(true)
  external  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type, order])
}

// ==========================================
// PROJECTS
// ==========================================

model Project {
  id             String        @id @default(cuid())
  title          String
  slug           String        @unique
  description    String
  longDescription String?      @db.Text
  imageUrl       String
  technologies   String        // JSON array stored as string
  githubUrl      String?
  liveUrl        String?
  featured       Boolean       @default(false)
  order          Int           @default(0)
  status         ProjectStatus @default(DRAFT)
  publishedAt    DateTime?
  seoTitle       String?
  seoDescription String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([featured])
  @@index([order])
  @@index([status])
}

enum ProjectStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// ==========================================
// BLOG
// ==========================================

model BlogPost {
  id             String     @id @default(cuid())
  title          String
  slug           String     @unique
  excerpt        String
  content        String     @db.Text // Markdown content
  coverImage     String?
  tags           String     // JSON array stored as string
  published      Boolean    @default(false)
  publishedAt    DateTime?
  views          Int        @default(0)
  likes          Int        @default(0)
  status         PostStatus @default(DRAFT)
  seoTitle       String?
  seoDescription String?
  readingTime    Int?       // minutes
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  reactions BlogReaction[]

  @@index([published])
  @@index([publishedAt])
  @@index([views])
  @@index([status])
}

enum PostStatus {
  DRAFT
  PUBLISHED
  SCHEDULED
  ARCHIVED
}

model BlogReaction {
  id        String   @id @default(cuid())
  postId    String
  type      String   // "like", "love", "fire", "clap"
  sessionId String   // Anonymous session tracking
  createdAt DateTime @default(now())

  post BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([postId, sessionId, type])
  @@index([postId])
}

// ==========================================
// CONTACT
// ==========================================

model ContactSubmission {
  id        String           @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String           @db.Text
  status    SubmissionStatus @default(UNREAD)
  repliedAt DateTime?
  notes     String?          @db.Text // Admin notes
  createdAt DateTime         @default(now())

  @@index([status])
  @@index([createdAt])
}

enum SubmissionStatus {
  UNREAD
  READ
  REPLIED
  ARCHIVED
  SPAM
}
